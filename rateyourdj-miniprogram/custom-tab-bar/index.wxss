.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  border-top: 3rpx solid #000;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
}

.tab-emoji {
  font-size: 20rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
  color: #666;
  transition: all 0.3s;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tab-bar-item.active .tab-emoji {
  color: #FF6600;
  transform: none;
}

.tab-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
  transition: color 0.3s;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tab-bar-item.active .tab-text {
  color: #FF6600;
  font-weight: 700;
}
