/* 全局样式 - NTS 风格 */
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'Arial', sans-serif;
  color: #000000;
  font-weight: 500;
}

/* 容器 */
.container {
  padding: 48rpx 32rpx;
}

/* 卡片 */
.card {
  background-color: #FFFFFF;
  border-radius: 4rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  box-shadow: none;
  border: 1rpx solid #E0E0E0;
}

/* 按钮 */
.btn {
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 700;
  padding: 28rpx 56rpx;
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.btn-primary {
  background-color: #000000;
  color: #FFFFFF;
  border: 2rpx solid #000000;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #000000;
  border: 2rpx solid #000000;
}

.btn-disabled {
  background-color: #E0E0E0;
  color: #999999;
  border: 2rpx solid #E0E0E0;
}

/* 文字 */
.text-primary {
  color: #000000;
  font-weight: 700;
}

.text-secondary {
  color: #666666;
  font-weight: 500;
}

.text-tertiary {
  color: #999999;
  font-weight: 400;
}

.text-accent {
  color: #000000;
  font-weight: 700;
}

.text-large {
  font-size: 40rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.text-medium {
  font-size: 28rpx;
  font-weight: 600;
}

.text-small {
  font-size: 24rpx;
  font-weight: 500;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #E0E0E0;
  margin: 24rpx 0;
}

/* 居中 */
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #999999;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 48rpx;
  color: #999999;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #000000;
  border-radius: 0;
  font-size: 22rpx;
  font-weight: 600;
  color: #000000;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-active {
  background-color: #000000;
  border-color: #000000;
  color: #FFFFFF;
}

/* 评分星星 */
.rating-stars {
  display: inline-flex;
  align-items: center;
}

.star {
  font-size: 32rpx;
  margin-right: 4rpx;
}

.star-filled {
  color: #FFD700;
}

.star-empty {
  color: #E0E0E0;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-small {
  width: 60rpx;
  height: 60rpx;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
}

/* 搜索框 */
.search-bar {
  background-color: #FFFFFF;
  border-radius: 0;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid #000000;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 16rpx;
}

/* 动画 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 安全区域 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
