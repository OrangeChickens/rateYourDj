<view class="recent-reviews-section">
  <view class="section-header">
    <text class="section-title">{{texts.title}}</text>
    <text class="view-all" bindtap="onViewAll">{{texts.viewAll}}</text>
  </view>

  <scroll-view scroll-x="{{true}}" class="reviews-scroll" wx:if="{{reviews && reviews.length > 0}}">
    <view class="reviews-list">
      <view wx:for="{{reviews}}" wx:key="id" class="review-card" bindtap="goToReview" data-dj-id="{{item.dj_id}}" data-review-id="{{item.id}}">
        <view class="card-content">
          <text class="dj-name">{{item.dj_name}}</text>
          <view class="rating-row">
            <view class="stars">
              <text wx:for="{{item.stars}}" wx:key="index" wx:for-item="star">â˜…</text>
            </view>
          </view>
          <text class="reviewer">{{item.nickname}}</text>
          <text class="time">{{item.timeAgo}}</text>
        </view>
      </view>
    </view>
  </scroll-view>

  <view wx:if="{{!reviews || reviews.length === 0}}" class="no-reviews">
    <text>{{texts.noReviews}}</text>
  </view>
</view>
