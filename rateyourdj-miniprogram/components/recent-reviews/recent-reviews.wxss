.recent-reviews-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #000;
}

.review-item {
  background: #F5F5F5;
  border: 3rpx solid #000;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.review-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 8rpx;
}

.rating-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stars {
  font-size: 20rpx;
  color: #000;
}

.rated-text {
  font-size: 22rpx;
  color: #666;
}

.dj-name {
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
}

.time {
  font-size: 20rpx;
  color: #999;
  flex-shrink: 0;
}

.review-preview {
  font-size: 24rpx;
  line-height: 1.6;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.no-reviews {
  text-align: center;
  padding: 64rpx 0;
  color: #999;
  font-size: 24rpx;
}
