.recent-reviews-section {
  padding: 24rpx 32rpx;
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 3rpx solid #000;
}

.section-title {
  font-size: 24rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.view-all {
  font-size: 20rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.reviews-scroll {
  width: 100%;
  white-space: nowrap;
}

.reviews-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.review-card {
  display: inline-block;
  width: 180rpx;
  background: #FFF;
  border: 3rpx solid #000;
  padding: 16rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.dj-name {
  font-size: 20rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  line-height: 1.2;
  white-space: normal;
  word-break: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.rating-row {
  display: flex;
  align-items: center;
}

.stars {
  font-size: 16rpx;
  color: #000;
  line-height: 1;
}

.reviewer {
  font-size: 18rpx;
  font-weight: 700;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.time {
  font-size: 16rpx;
  color: #666;
  text-transform: uppercase;
}

.no-reviews {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}
