.stats-section {
  padding: 48rpx 32rpx;
  margin-bottom: 24rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-value {
  font-size: 64rpx;
  font-weight: 900;
  color: #000;
  line-height: 1;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.stat-label {
  font-size: 20rpx;
  font-weight: 400;
  color: #999;
  line-height: 1.2;
  text-align: center;
}
