<view class="stats-section">
  <view class="stats-row">
    <view class="stat-item">
      <text class="stat-value">{{stats.djCount || 0}}</text>
      <text class="stat-label">{{texts.djTotal}}</text>
    </view>

    <view class="stat-item">
      <text class="stat-value">{{stats.reviewCount || 0}}</text>
      <text class="stat-label">{{texts.reviewTotal}}</text>
    </view>

    <view class="stat-item">
      <text class="stat-value">{{stats.interactionCount || 0}}</text>
      <text class="stat-label">{{texts.interactionTotal}}</text>
    </view>

    <view class="stat-item">
      <text class="stat-value">{{stats.userCount || 0}}</text>
      <text class="stat-label">{{texts.userTotal}}</text>
    </view>
  </view>
</view>
