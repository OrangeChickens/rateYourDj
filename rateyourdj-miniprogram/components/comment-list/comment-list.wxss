/* components/comment-list/comment-list.wxss - NTS Style */

.comment-list {
  width: 100%;
}

.comment-item {
  border-left: 2rpx solid #E0E0E0;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
}

.time {
  font-size: 20rpx;
  color: #999;
}

.comment-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.vote-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.vote-btn {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx;
  user-select: none;
}

.vote-btn.upvote.voted {
  color: #FF6600;
  font-weight: 900;
}

.vote-btn.downvote.voted {
  color: #0066FF;
  font-weight: 900;
}

.vote-btn.upvote:active {
  color: #FF6600;
}

.vote-btn.downvote:active {
  color: #0066FF;
}

.vote-score {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  min-width: 40rpx;
  text-align: center;
}

.reply-btn,
.delete-btn {
  font-size: 22rpx;
  color: #666;
  padding: 8rpx 16rpx;
  user-select: none;
}

.reply-btn:active {
  color: #000;
}

.delete-btn {
  color: #999;
}

.delete-btn:active {
  color: #F00;
}

.nested-replies {
  margin-top: 24rpx;
}

/* 回复输入框 */
.reply-input-box {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #F5F5F5;
  border: 3rpx solid #000;
}

.reply-input {
  width: 100%;
  min-height: 80rpx;
  padding: 16rpx;
  background: #FFF;
  border: 2rpx solid #000;
  font-size: 26rpx;
  line-height: 1.6;
  box-sizing: border-box;
  margin-bottom: 16rpx;
}

.reply-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.cancel-reply-btn,
.submit-reply-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  line-height: 1;
}

.cancel-reply-btn {
  background: #FFF;
  color: #000;
}

.cancel-reply-btn::after {
  border: none;
}

.submit-reply-btn {
  background: #000;
  color: #FFF;
}

.submit-reply-btn::after {
  border: none;
}
