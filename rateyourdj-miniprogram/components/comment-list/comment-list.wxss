/* components/comment-list/comment-list.wxss - NTS Style */

.comment-list {
  width: 100%;
}

.comment-item {
  border-left: 2rpx solid #E0E0E0;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  box-sizing: border-box;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nickname {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
}

.time {
  font-size: 20rpx;
  color: #999;
}

.comment-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 16rpx;
  word-wrap: break-word;
}

.comment-actions {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.vote-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.vote-btn {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx;
  user-select: none;
}

.vote-btn.upvote:active {
  color: #FF6600;
}

.vote-btn.downvote:active {
  color: #0066FF;
}

.vote-score {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  min-width: 40rpx;
  text-align: center;
}

.reply-btn,
.delete-btn {
  font-size: 22rpx;
  color: #666;
  padding: 8rpx 16rpx;
  user-select: none;
}

.reply-btn:active {
  color: #000;
}

.delete-btn {
  color: #999;
}

.delete-btn:active {
  color: #F00;
}

.nested-replies {
  margin-top: 24rpx;
}
