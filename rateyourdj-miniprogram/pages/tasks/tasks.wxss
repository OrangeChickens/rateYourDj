/* pages/tasks/tasks.wxss - NTS Style */

.tasks-container {
  min-height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 头部状态 */
.tasks-header {
  background: #FFFFFF;
  border-bottom: 3rpx solid #000;
  padding: 40rpx 32rpx;
}

.quota-card {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 32rpx;
  margin-bottom: 40rpx;
}

.quota-info {
  flex: 1;
}

.quota-label {
  display: block;
  font-size: 20rpx;
  font-weight: 700;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.quota-number {
  display: block;
  font-size: 80rpx;
  font-weight: 900;
  color: #000;
  line-height: 1;
  letter-spacing: -2rpx;
}

.manage-btn {
  padding: 16rpx 20rpx;
  background: #000;
  color: #FFF;
  font-size: 22rpx;
  font-weight: 700;
  border: none;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  flex-shrink: 0;
}

.manage-btn::after {
  border: none;
}

.manage-btn:active {
  opacity: 0.8;
}

.stats-row {
  display: flex;
  gap: 0;
  padding-top: 40rpx;
  border-top: 3rpx solid #000;
}

.stat-box {
  flex: 1;
  padding: 0 32rpx;
  position: relative;
}

.stat-box + .stat-box::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 60rpx;
  background: #E0E0E0;
}

.stat-label {
  display: block;
  font-size: 20rpx;
  font-weight: 700;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.stat-value {
  display: block;
  font-size: 64rpx;
  font-weight: 900;
  color: #000;
  line-height: 1;
  letter-spacing: -1rpx;
}

/* 任务列表 */
.tasks-list {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
  width: 100%;
}

/* 任务分类 */
.task-section {
  margin-bottom: 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #000;
}

.section-title {
  font-size: 32rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.vip-badge {
  padding: 8rpx 20rpx;
  background: #000;
  color: #FFF;
  font-size: 20rpx;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* 任务卡片 */
.task-card {
  background: #F5F5F5;
  border: 3rpx solid #000;
  padding: 24rpx;
  margin: 0 0 24rpx 0;
  display: flex;
  gap: 20rpx;
  transition: all 0.2s;
  box-sizing: border-box;
  width: 100%;
}

.task-card:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

.task-card.completed {
  opacity: 0.5;
  border-color: #999;
}

.task-card.vip {
  border-width: 4rpx;
  background: #FFFEF8;
}

/* 任务左侧 */
.task-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.task-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  letter-spacing: 0.5rpx;
  margin-bottom: 12rpx;
}

.task-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.task-footer {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.progress-bar {
  flex: 1;
  height: 20rpx;
  background: #E0E0E0;
  border: 2rpx solid #000;
  position: relative;
  min-width: 0;
}

.progress-fill {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: #000;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 900;
  color: #000;
  white-space: nowrap;
}

/* 任务右侧 */
.task-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
  flex-shrink: 0;
  width: 120rpx;
}

.reward-badge {
  width: 100%;
  padding: 10rpx 16rpx;
  background: #FFF;
  border: 3rpx solid #000;
  font-size: 26rpx;
  font-weight: 900;
  color: #000;
  letter-spacing: 1rpx;
  text-align: center;
  box-sizing: border-box;
}

.action-btn {
  width: 100%;
  padding: 14rpx 20rpx;
  font-size: 26rpx;
  font-weight: 900;
  letter-spacing: 1rpx;
  border: 3rpx solid #000;
  text-align: center;
  box-sizing: border-box;
}

.action-btn.claim {
  background: #000;
  color: #FFF;
}

.action-btn.completed {
  background: #E0E0E0;
  color: #666;
  border-color: #999;
}

.action-btn.pending {
  background: #FFF;
  color: #000;
}
