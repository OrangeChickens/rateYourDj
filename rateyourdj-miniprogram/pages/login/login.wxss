/* pages/login/login.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 48rpx;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 128rpx;
}

.title {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 24rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

/* 登录表单 */
.login-form {
  width: 100%;
  max-width: 600rpx;
}

/* 头像区域 */
.avatar-section {
  margin-bottom: 64rpx;
}

.label {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.avatar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  padding: 48rpx;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  background-color: #F0F0F0;
}

.avatar-tip {
  font-size: 22rpx;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 昵称区域 */
.nickname-section {
  margin-bottom: 64rpx;
}

.nickname-input {
  width: 100%;
  padding: 32rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  padding: 32rpx;
  background-color: #000;
  color: #FFF;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 0;
  text-align: center;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  background-color: #CCCCCC;
  border-color: #CCCCCC;
  color: #666;
}

/* 提示文字 */
.tips {
  text-align: center;
}

.tips text {
  font-size: 20rpx;
  font-weight: 600;
  color: #999;
  letter-spacing: 0.5rpx;
}
