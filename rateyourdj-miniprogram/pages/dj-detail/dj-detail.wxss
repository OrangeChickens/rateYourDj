/* pages/dj-detail/dj-detail.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading {
  padding: 160rpx 0;
  text-align: center;
  color: #000;
  font-size: 26rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* DJ头部 */
.dj-header {
  background: #FFF;
  padding: 80rpx 48rpx 48rpx 48rpx;
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  position: relative;
}

.dj-photo {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.dj-photo .photo {
  width: 100%;
  height: 100%;
  border-radius: 0;
  background-color: #F0F0F0;
  border: 2rpx solid #000;
}

.dj-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-right: 80rpx;
  min-width: 0;
  height: 200rpx;
}

.dj-name {
  /* font-size 通过 JS 动态计算设置（根据名字长度） */
  font-weight: 700;
  color: #000;
  line-height: 1.1;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  word-break: break-word;
}

.dj-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 24rpx;
  line-height: 1.3;
}

.dj-meta .city {
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.dj-meta .label {
  color: #666;
  font-weight: 600;
  font-size: 22rpx;
  word-break: break-all;
  line-height: 1.4;
}

/* 风格标签区域 */
.style-tags-section {
  background: #FFF;
  padding: 16rpx 48rpx 24rpx 48rpx;
  border-bottom: 2rpx solid #000;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  flex: 1;
}

.style-tags .tag {
  padding: 12rpx 24rpx;
  background-color: #FFF;
  color: #000;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.edit-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #000;
  color: #FFF;
  font-size: 20rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  flex-shrink: 0;
}

.edit-icon {
  font-size: 24rpx;
  line-height: 1;
}

.edit-text {
  line-height: 1;
}

/* 操作按钮组 */
.action-btns {
  position: absolute !important;
  top: 80rpx;
  right: 48rpx;
  z-index: 10;
}

.favorite-btn {
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-btn .icon {
  font-size: 56rpx;
  color: #000;
  font-weight: 400;
  line-height: 1;
  display: block;
}

/* ========== 音频/视频 Media Section ========== */

.media-section {
  background: #FFF;
  padding: 48rpx;
  border-bottom: 2rpx solid #000;
}

.media-header {
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 3rpx solid #000;
}

.media-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* Audio list */
.audio-list {
  display: flex;
  flex-direction: column;
}

.audio-item {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
}

.audio-item:last-child {
  border-bottom: none;
}

.audio-item.playing {
  background: #F5F5F5;
  margin: 0 -24rpx;
  padding: 32rpx 24rpx;
}

.audio-play-btn {
  width: 80rpx;
  height: 80rpx;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.audio-item.playing .audio-play-btn {
  background: #000;
}

.play-icon {
  color: #FFF;
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1;
}

.audio-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.audio-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-duration {
  font-size: 22rpx;
  font-weight: 600;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* Audio progress */
.audio-progress {
  width: 100%;
  padding-top: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 6rpx;
  background: #E0E0E0;
}

.progress-fill {
  height: 100%;
  background: #000;
  transition: width 0.3s linear;
}

.progress-time {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
}

/* Video list */
.video-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.video-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.video-item channel-video {
  width: 100%;
  border: 2rpx solid #000;
}

.video-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 评分统计 */
.rating-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  border-bottom: 2rpx solid #000;
}

.overall-rating {
  text-align: center;
  padding-bottom: 48rpx;
  border-bottom: 2rpx solid #000;
}

.rating-value {
  font-size: 120rpx;
  font-weight: 700;
  color: #000;
  line-height: 1;
  letter-spacing: -2rpx;
}

.overall-rating .stars {
  margin: 24rpx 0;
  font-size: 32rpx;
}

.overall-rating .stars .star.full {
  color: #000;
}

.overall-rating .stars .star.empty {
  color: #CCCCCC;
}

.review-count {
  font-size: 24rpx;
  color: #000;
  font-weight: 700;
  margin-top: 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.rating-details {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
  margin-top: 48rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.rating-item .label {
  flex: 1;
  font-size: 26rpx;
  color: #000;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.rating-item .stars-small {
  font-size: 20rpx;
}

.rating-item .stars-small .star {
  color: #000;
}

.rating-item .value {
  width: 100rpx;
  text-align: right;
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  letter-spacing: -1rpx;
}

.rating-item.would-choose {
  padding-top: 32rpx;
  border-top: 2rpx solid #000;
}

.rating-item .value.highlight {
  width: 100rpx;
  text-align: right;
  color: #000;
  font-size: 48rpx;
}

/* 评论区域 */
.reviews-section {
  background: #FFF;
  margin-top: 32rpx;
  padding: 64rpx 48rpx;
  border-top: 2rpx solid #000;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 3rpx solid #000;
}

.section-header .title {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.section-header .sort-btn {
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  padding: 12rpx 24rpx;
  background-color: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 评论卡片 */
.review-card {
  padding: 48rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
}

.review-card:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.review-header .avatar-wrapper {
  width: 72rpx;
  height: 72rpx;
  border: 2rpx solid #000;
  flex-shrink: 0;
}

.review-header .avatar {
  width: 100%;
  height: 100%;
  display: block;
}

.review-header .user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.review-header .nickname {
  font-size: 26rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-header .date {
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-header .rating {
  font-size: 20rpx;
}

.review-header .rating .star {
  color: #000;
}

.review-header .rating .star.empty {
  color: #CCCCCC;
}

/* 评论内容 */
.review-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.rating-row {
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
  line-height: 1;
}

.rating-row .item {
  display: inline-block;
  margin-right: 24rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  vertical-align: baseline;
}

.rating-row .would-choose-yes {
  display: inline-block;
  margin-right: 24rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  vertical-align: baseline;
  color: #000;
  font-weight: 700;
}

.rating-row .would-choose-no {
  display: inline-block;
  margin-right: 24rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  vertical-align: baseline;
  color: #666;
  font-weight: 700;
}

.review-content .tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.review-content .tags .tag {
  padding: 12rpx 24rpx;
  background-color: #FFF;
  color: #000;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-content .comment {
  font-size: 26rpx;
  line-height: 1.8;
  color: #000;
  font-weight: 500;
}

/* 互动区域 - Reddit 风格 */
.review-interactions {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #E0E0E0;
}

/* 第一行：Vote, Reply, Report, Share */
.review-actions {
  display: flex;
  gap: 24rpx;
  align-items: center;
  flex-wrap: nowrap;
}

.review-actions .action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  padding: 8rpx 0;
  white-space: nowrap;
  flex-shrink: 0;
}

.review-actions .action text {
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  white-space: nowrap;
}

.review-actions .action .icon {
  font-size: 24rpx;
  color: #666;
}

/* Vote 按钮特殊样式（上下箭头 + 数字） */
.review-actions .action.vote {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 0;
}

.review-actions .action.vote .icon {
  font-size: 28rpx;
  padding: 4rpx;
  color: #999;
}

.review-actions .action.vote .icon.up:active,
.review-actions .action.vote .icon.up.active {
  color: #FF6600;
}

.review-actions .action.vote .icon.down:active,
.review-actions .action.vote .icon.down.active {
  color: #0066FF;
}

.review-actions .action.vote .count {
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  min-width: 40rpx;
  text-align: center;
}

/* 分享按钮特殊样式（去除 button 默认样式） */
.review-actions .share-btn {
  margin: 0;
  padding: 8rpx 0;
  background: transparent;
  border: none;
  border-radius: 0;
  line-height: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  white-space: nowrap;
  flex-shrink: 0;
}

.review-actions .share-btn::after {
  border: none;
}

.review-actions .share-btn .icon {
  font-size: 24rpx;
  color: #666;
}

.review-actions .share-btn text {
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  white-space: nowrap;
}

/* 第二行：展开评论数 */
.comments-expand {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 12rpx 0;
}

.comments-expand .expand-icon {
  font-size: 24rpx;
  color: #666;
  font-weight: 700;
}

.comments-expand .expand-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 64rpx 0;
}

.load-more .btn {
  display: inline-block;
  padding: 28rpx 80rpx;
  background-color: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.load-more .loading-text,
.load-more .no-more {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 空状态 */
.empty-state {
  padding: 160rpx 0;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 底部写评论按钮 */
.write-review-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background-color: #FFF;
  border-top: 3rpx solid #000;
  box-shadow: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.write-review-btn text {
  display: block;
  width: 100%;
  max-width: 670rpx;
  padding: 28rpx;
  background-color: #000;
  color: #FFF;
  font-size: 28rpx;
  font-weight: 700;
  text-align: center;
  border-radius: 0;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* ========== 评论区样式 ========== */

.comments-section {
  margin-top: 0;
}

.comments-content-wrapper {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #F0F0F0;
}

.write-comment {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background: #F5F5F5;
  border: 2rpx solid #E0E0E0;
}

.comment-input {
  flex: 1;
  font-size: 26rpx;
  min-height: 60rpx;
  line-height: 1.4;
}

.submit-comment-btn {
  padding: 12rpx 20rpx;
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  border: none;
  border-radius: 0;
  flex-shrink: 0;
  min-width: 80rpx;
  max-width: 100rpx;
}

.submit-comment-btn::after {
  border: none;
}

.no-comments {
  text-align: center;
  padding: 80rpx 48rpx;
  font-size: 24rpx;
  color: #999;
}
