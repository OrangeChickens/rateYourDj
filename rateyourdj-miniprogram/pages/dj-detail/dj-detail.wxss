/* pages/dj-detail/dj-detail.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading {
  padding: 160rpx 0;
  text-align: center;
  color: #000;
  font-size: 26rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* DJ头部 */
.dj-header {
  background: #FFF;
  padding: 64rpx 48rpx;
  display: flex;
  gap: 48rpx;
  position: relative;
  border-bottom: 3rpx solid #000;
}

.dj-photo {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.dj-photo .photo {
  width: 100%;
  height: 100%;
  border-radius: 0;
  background-color: #F0F0F0;
  border: 2rpx solid #000;
}

.dj-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dj-name {
  font-size: 52rpx;
  font-weight: 700;
  color: #000;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.dj-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.dj-meta .city {
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.dj-meta .label {
  color: #666;
  font-weight: 600;
}

.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tags .tag {
  padding: 12rpx 24rpx;
  background-color: #FFF;
  color: #000;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 收藏按钮 */
/* 操作按钮组 */
.action-btns {
  position: absolute;
  top: 64rpx;
  right: 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.favorite-btn,
.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  background: transparent;
  border: none;
  padding: 0;
}

.share-btn::after {
  border: none;
}

.favorite-btn .icon,
.share-btn .icon {
  font-size: 48rpx;
  color: #000;
  font-weight: 700;
}

.favorite-btn .text,
.share-btn .text {
  font-size: 20rpx;
  color: #000;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 评分统计 */
.rating-section {
  background: #FFF;
  margin-top: 32rpx;
  padding: 64rpx 48rpx;
  border-top: 2rpx solid #000;
  border-bottom: 2rpx solid #000;
}

.overall-rating {
  text-align: center;
  padding-bottom: 48rpx;
  border-bottom: 2rpx solid #000;
}

.rating-value {
  font-size: 120rpx;
  font-weight: 700;
  color: #000;
  line-height: 1;
  letter-spacing: -2rpx;
}

.overall-rating .stars {
  margin: 24rpx 0;
  font-size: 32rpx;
}

.overall-rating .stars .star.full {
  color: #000;
}

.overall-rating .stars .star.empty {
  color: #CCCCCC;
}

.review-count {
  font-size: 24rpx;
  color: #000;
  font-weight: 700;
  margin-top: 20rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.rating-details {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
  margin-top: 48rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.rating-item .label {
  flex: 1;
  font-size: 26rpx;
  color: #000;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.rating-item .stars-small {
  font-size: 20rpx;
}

.rating-item .stars-small .star {
  color: #000;
}

.rating-item .value {
  width: 100rpx;
  text-align: right;
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  letter-spacing: -1rpx;
}

.rating-item.would-choose {
  padding-top: 32rpx;
  border-top: 2rpx solid #000;
}

.rating-item .value.highlight {
  width: 100rpx;
  text-align: right;
  color: #000;
  font-size: 48rpx;
}

/* 评论区域 */
.reviews-section {
  background: #FFF;
  margin-top: 32rpx;
  padding: 64rpx 48rpx;
  border-top: 2rpx solid #000;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 3rpx solid #000;
}

.section-header .title {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.section-header .sort-btn {
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  padding: 12rpx 24rpx;
  background-color: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 评论卡片 */
.review-card {
  padding: 48rpx 0;
  border-bottom: 2rpx solid #E0E0E0;
}

.review-card:last-child {
  border-bottom: none;
}

.review-header {
  display: flex;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.review-header .avatar-wrapper {
  width: 72rpx;
  height: 72rpx;
  border: 2rpx solid #000;
  flex-shrink: 0;
}

.review-header .avatar {
  width: 100%;
  height: 100%;
  display: block;
}

.review-header .user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.review-header .nickname {
  font-size: 26rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-header .date {
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-header .rating {
  font-size: 20rpx;
}

.review-header .rating .star {
  color: #000;
}

.review-header .rating .star.empty {
  color: #CCCCCC;
}

/* 评论内容 */
.review-content {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.rating-row {
  display: flex;
  gap: 48rpx;
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
}

.rating-row .item {
  display: flex;
  align-items: center;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.would-choose {
  font-size: 22rpx;
  font-weight: 700;
}

.would-choose .yes {
  color: #000;
  font-weight: 700;
}

.would-choose .no {
  color: #666;
  font-weight: 700;
}

.review-content .tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.review-content .tags .tag {
  padding: 12rpx 24rpx;
  background-color: #FFF;
  color: #000;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-content .comment {
  font-size: 26rpx;
  line-height: 1.8;
  color: #000;
  font-weight: 500;
}

/* 评论操作 */
.review-actions {
  display: flex;
  gap: 48rpx;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #E0E0E0;
}

.review-actions .action {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.review-actions .action .icon {
  font-size: 28rpx;
}

.review-actions .action.report {
  margin-left: auto;
  color: #666;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 64rpx 0;
}

.load-more .btn {
  display: inline-block;
  padding: 28rpx 80rpx;
  background-color: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.load-more .loading-text,
.load-more .no-more {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 空状态 */
.empty-state {
  padding: 160rpx 0;
  text-align: center;
  font-size: 26rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 底部写评论按钮 */
.write-review-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background-color: #FFF;
  border-top: 3rpx solid #000;
  box-shadow: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.write-review-btn text {
  display: block;
  width: 100%;
  max-width: 670rpx;
  padding: 28rpx;
  background-color: #000;
  color: #FFF;
  font-size: 28rpx;
  font-weight: 700;
  text-align: center;
  border-radius: 0;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}
