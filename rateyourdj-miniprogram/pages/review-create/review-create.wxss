/* pages/review-create/review-create.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  transition: transform 0.5s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.container.sliding-up {
  transform: translateY(-100vh);
}

/* 页面头部 */
.page-header {
  background: #FFF;
  padding: 64rpx 48rpx;
  border-bottom: 3rpx solid #000;
}

.dj-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 表单内容区域 */
.form-content {
  flex: 1;
  padding: 0;
  padding-top: 64rpx;
  padding-bottom: 240rpx;
}

/* 评分区域 */
.rating-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.rating-section:first-child {
  margin-top: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 40rpx;
  display: block;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  border-bottom: 2rpx solid #000;
  padding-bottom: 24rpx;
}

.stars-input {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stars-input .star {
  font-size: 64rpx;
  color: #CCCCCC;
  transition: color 0.2s;
}

.stars-input .star.active {
  color: #000;
}

.rating-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 切换开关区域 */
.toggle-section {
  background: #FFF;
  padding: 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 标签选择区域 */
.tags-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.tag-group {
  margin-bottom: 48rpx;
}

.tag-group:last-child {
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #000;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-list .tag {
  display: inline-block;
  padding: 16rpx 32rpx;
  background-color: #FFF;
  color: #000;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 0;
  border: 2rpx solid #000;
  transition: all 0.2s;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-list .tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.tag-list .tag.selected {
  background-color: #000;
  color: #FFF;
  border-color: #000;
  font-weight: 700;
}

/* 自定义标签输入行 */
.custom-tag-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 24rpx;
}

.custom-tag-row .search-input {
  flex: 1;
}

.custom-tag-btn {
  width: 70rpx;
  height: 70rpx;
  background: #000;
  color: #FFF;
  font-size: 40rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #000;
  flex-shrink: 0;
}

.custom-tag-btn:active {
  background: #333;
}

.custom-tag-row + .tag-list {
  margin-top: 16rpx;
}

.selected-count {
  margin-top: 32rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 搜索框样式 */
.search-box {
  margin-bottom: 24rpx;
}

.search-input {
  display: block;
  width: 100%;
  height: 70rpx;
  background: #FFF;
  border-radius: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  border: 2rpx solid #000;
  font-weight: 500;
  margin: 0;
}

/* 分类样式 */
.style-categories {
  max-height: 800rpx;
  overflow-y: auto;
}

.category-group,
.genre-group {
  margin-bottom: 16rpx;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F5F5F5;
  border: 2rpx solid #000;
  border-radius: 0;
  cursor: pointer;
  margin-bottom: 8rpx;
  margin-left: 0;
  margin-right: 0;
  box-sizing: border-box;
}

.category-icon {
  font-size: 22rpx;
  color: #000;
  margin-right: 12rpx;
  width: 20rpx;
  font-weight: 700;
}

.category-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* Subgroups container (level 2) */
.subgroups-container {
  border: 2rpx solid #000;
  border-top: none;
  background: #FFF;
  padding: 16rpx 20rpx 20rpx 20rpx;
}

.subgroup {
  margin-bottom: 16rpx;
}

.subgroup:last-child {
  margin-bottom: 0;
}

.subgroup-title {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.subgroup-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 分类中的标签样式 */
.subgroup-tags .tag-item {
  padding: 12rpx 24rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  font-size: 22rpx;
  color: #000;
  transition: all 0.2s;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.subgroup-tags .tag-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.subgroup-tags .tag-item.selected {
  background: #000 !important;
  border-color: #000 !important;
  color: #FFF !important;
  font-weight: 700 !important;
}

/* 评论输入区域 */
.comment-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.comment-input {
  width: 100%;
  min-height: 240rpx;
  padding: 0;
  background-color: #FFF;
  border: none;
  border-radius: 0;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.8;
  color: #000;
  margin-top: 24rpx;
}

.char-count {
  margin-top: 24rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 匿名选项 */
.anonymous-section {
  background: #FFF;
  padding: 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 滑动提交区域 */
.swipe-submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 48rpx;
  z-index: 100;
  transition: background-color 0.3s;
}

.swipe-submit-area.active {
  background: #F5F5F5;
}

.swipe-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  transition: transform 0.2s;
}

.swipe-icon {
  font-size: 80rpx;
  font-weight: 700;
  color: #000;
  line-height: 1;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

.swipe-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.swipe-progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #E0E0E0;
}

.swipe-progress-fill {
  height: 100%;
  background: #000;
  transition: width 0.1s linear;
}

/* 提交动画遮罩层 */
.submit-animation-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  z-index: 9999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.submit-animation-overlay.show {
  opacity: 1;
  pointer-events: all;
}

/* 动画内容 */
.animation-content {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 向上滑动阶段 */
.animation-content.slide-up {
  animation: slideUpPage 0.5s cubic-bezier(0.4, 0.0, 0.2, 1) forwards;
}

@keyframes slideUpPage {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-100%);
  }
}

/* 成功阶段 */
.animation-content.success {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 五彩纸屑容器 */
.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

/* 单个纸屑 */
.confetti {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: -40rpx;
  opacity: 0;
}

/* 不同形状的纸屑 */
.confetti:nth-child(2n) {
  border-radius: 50%;
}

.confetti:nth-child(3n) {
  width: 12rpx;
  height: 24rpx;
}

.confetti:nth-child(5n) {
  width: 24rpx;
  height: 12rpx;
}

.confetti:nth-child(odd) {
  animation: confettiFallLeft 3s ease-out forwards;
}

.confetti:nth-child(even) {
  animation: confettiFallRight 3s ease-out forwards;
}

.confetti:nth-child(3n) {
  animation: confettiFallStraight 3s ease-out forwards;
}

@keyframes confettiFallLeft {
  0% {
    top: -40rpx;
    opacity: 1;
    transform: translateX(0) rotateZ(0deg) scale(1);
  }
  100% {
    top: 100vh;
    opacity: 0;
    transform: translateX(-200rpx) rotateZ(720deg) scale(0.5);
  }
}

@keyframes confettiFallRight {
  0% {
    top: -40rpx;
    opacity: 1;
    transform: translateX(0) rotateZ(0deg) scale(1);
  }
  100% {
    top: 100vh;
    opacity: 0;
    transform: translateX(200rpx) rotateZ(-720deg) scale(0.5);
  }
}

@keyframes confettiFallStraight {
  0% {
    top: -40rpx;
    opacity: 1;
    transform: translateX(0) rotateZ(0deg) scale(1);
  }
  100% {
    top: 100vh;
    opacity: 0;
    transform: translateX(0) rotateZ(360deg) scale(0.8);
  }
}

/* 成功内容 */
.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 48rpx;
  animation: successPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes successPop {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 成功图标 */
.success-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #000;
  color: #FFF;
  font-size: 120rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  animation: checkmark 0.5s ease-in-out 0.3s backwards;
}

@keyframes checkmark {
  0% {
    transform: scale(0) rotate(-45deg);
  }
  50% {
    transform: scale(1.2) rotate(10deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
  }
}

/* 成功文字 */
.success-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  animation: textSlideUp 0.5s ease-out 0.5s backwards;
}

@keyframes textSlideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
