/* pages/review-create/review-create.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  background: #FFF;
  padding: 64rpx 48rpx;
  border-bottom: 3rpx solid #000;
}

.dj-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.subtitle {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 表单内容区域 */
.form-content {
  flex: 1;
  padding: 0;
  padding-top: 64rpx;
  padding-bottom: 240rpx;
}

/* 评分区域 */
.rating-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.rating-section:first-child {
  margin-top: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 40rpx;
  display: block;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  border-bottom: 2rpx solid #000;
  padding-bottom: 24rpx;
}

.stars-input {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.stars-input .star {
  font-size: 64rpx;
  color: #CCCCCC;
  transition: color 0.2s;
}

.stars-input .star.active {
  color: #000;
}

.rating-value {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 切换开关区域 */
.toggle-section {
  background: #FFF;
  padding: 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 标签选择区域 */
.tags-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.tag-group {
  margin-bottom: 48rpx;
}

.tag-group:last-child {
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #000;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-list .tag {
  display: inline-block;
  padding: 16rpx 32rpx;
  background-color: #FFF;
  color: #000;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 0;
  border: 2rpx solid #000;
  transition: all 0.2s;
  cursor: pointer;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-list .tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.tag-list .tag.selected {
  background-color: #000;
  color: #FFF;
  border-color: #000;
  font-weight: 700;
}

.selected-count {
  margin-top: 32rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 评论输入区域 */
.comment-section {
  background: #FFF;
  padding: 64rpx 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
}

.comment-input {
  width: 100%;
  min-height: 240rpx;
  padding: 0;
  background-color: #FFF;
  border: none;
  border-radius: 0;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.8;
  color: #000;
  margin-top: 24rpx;
}

.char-count {
  margin-top: 24rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-align: right;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 匿名选项 */
.anonymous-section {
  background: #FFF;
  padding: 48rpx;
  margin: 0 32rpx 32rpx 32rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 滑动提交区域 */
.swipe-submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 48rpx;
  z-index: 100;
  transition: background-color 0.3s;
}

.swipe-submit-area.active {
  background: #F5F5F5;
}

.swipe-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  transition: transform 0.2s;
}

.swipe-icon {
  font-size: 80rpx;
  font-weight: 700;
  color: #000;
  line-height: 1;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

.swipe-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.swipe-progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #E0E0E0;
}

.swipe-progress-fill {
  height: 100%;
  background: #000;
  transition: width 0.1s linear;
}
