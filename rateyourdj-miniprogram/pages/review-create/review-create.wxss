/* pages/review-create/review-create.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  background: #FFF;
  padding: 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.dj-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 表单内容区域 */
.form-content {
  flex: 1;
  padding: 20rpx;
}

/* 评分区域 */
.rating-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 24rpx;
  display: block;
}

.stars-input {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.stars-input .star {
  font-size: 72rpx;
  color: #DDD;
  transition: color 0.2s;
}

.stars-input .star.active {
  color: #FFD700;
}

.rating-value {
  font-size: 28rpx;
  color: #666;
}

/* 切换开关区域 */
.toggle-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 标签选择区域 */
.tags-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.tag-group {
  margin-bottom: 30rpx;
}

.tag-group:last-child {
  margin-bottom: 0;
}

.group-title {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-list .tag {
  padding: 12rpx 28rpx;
  background-color: #F5F5F5;
  color: #666;
  font-size: 26rpx;
  border-radius: 6rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag-list .tag.selected {
  background-color: #FFD700;
  color: #000;
  border-color: #FFD700;
  font-weight: 600;
}

.selected-count {
  margin-top: 24rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 评论输入区域 */
.comment-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.comment-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-top: 16rpx;
}

.char-count {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  text-align: right;
}

/* 匿名选项 */
.anonymous-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 提交按钮 */
.submit-section {
  background: #FFF;
  padding: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 12rpx;
}

.submit-btn {
  width: 100%;
  padding: 28rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  border-radius: 12rpx;
  border: none;
}

.submit-btn.disabled {
  opacity: 0.6;
}

.submit-btn::after {
  border: none;
}
