/* pages/settings/settings.wxss - NTS 风格 */

.container {
  background-color: #FFFFFF;
  padding-bottom: 200rpx;
  box-sizing: border-box;
}

/* 用户信息区域 */
.user-section {
  background: #FFF;
  padding: 80rpx 48rpx;
  margin-bottom: 32rpx;
  border-bottom: 3rpx solid #000;
}

.user-info {
  display: flex;
  align-items: flex-start;
  gap: 48rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 0;
  background-color: #F0F0F0;
  border: 2rpx solid #000;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  justify-content: center;
  min-height: 140rpx;
}

.nickname {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
}

.separator {
  color: #000;
  font-weight: 700;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  gap: 48rpx;
}

.login-btn {
  flex: 1;
  padding: 32rpx;
  background-color: #000;
  color: #FFF;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 0;
  text-align: center;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.login-btn::after {
  border: none;
}

/* 菜单区域 */
.menu-section {
  background: #FFF;
}

.menu-section:first-of-type {
  border-top: 3rpx solid #000;
  padding-top: 0;
}

.menu-section:last-of-type {
  border-bottom: 3rpx solid #000;
  padding-bottom: 0;
}

/* sections 之间用灰色细线分隔 */
.menu-section:not(:last-of-type) {
  border-bottom: 1rpx solid #E0E0E0;
  margin-bottom: 0;
  padding-bottom: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 48rpx;
  border-bottom: 1rpx solid #E0E0E0;
  gap: 32rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 20rpx;
  font-weight: 700;
  width: 60rpx;
  text-align: left;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.menu-label {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
}

.menu-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.menu-arrow {
  font-size: 40rpx;
  color: #000;
  font-weight: 700;
}

/* 退出登录 */
.logout-section {
  padding: 48rpx;
  margin-top: 120rpx;
  margin-bottom: 80rpx;
}

.logout-btn {
  width: 100%;
  padding: 32rpx;
  background-color: #FFF;
  color: #000;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 0;
  text-align: center;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.logout-btn::after {
  border: none;
}
