/* pages/settings/settings.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: #FFF;
  padding: 60rpx 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #F0F0F0;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
}

.stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #666;
}

.separator {
  color: #DDD;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.login-btn {
  flex: 1;
  padding: 24rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  text-align: center;
}

.login-btn::after {
  border: none;
}

/* 菜单区域 */
.menu-section {
  background: #FFF;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #F5F5F5;
  gap: 24rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  width: 50rpx;
  text-align: center;
}

.menu-label {
  flex: 1;
  font-size: 30rpx;
  color: #000;
}

.menu-value {
  font-size: 26rpx;
  color: #999;
}

.menu-arrow {
  font-size: 40rpx;
  color: #DDD;
  font-weight: 300;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx;
}

.logout-btn {
  width: 100%;
  padding: 28rpx;
  background-color: #FFF;
  color: #FF4D4F;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid #FF4D4F;
}

.logout-btn::after {
  border: none;
}
