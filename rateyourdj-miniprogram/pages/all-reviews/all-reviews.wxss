/* pages/all-reviews/all-reviews.wxss */
.container {
  padding: 32rpx;
  background: #F5F5F5;
  min-height: 100vh;
}

.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.review-item {
  background: #FFF;
  border: 3rpx solid #000;
  padding: 24rpx;
  box-sizing: border-box;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nickname {
  font-size: 26rpx;
  font-weight: 700;
  color: #000;
}

.time {
  font-size: 20rpx;
  color: #999;
  text-transform: uppercase;
}

.rating {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.rating-number {
  font-size: 48rpx;
  font-weight: 900;
  color: #000;
  line-height: 1;
}

.stars {
  font-size: 20rpx;
  color: #000;
  line-height: 1;
}

.dj-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.label {
  font-size: 18rpx;
  font-weight: 700;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.dj-name {
  font-size: 24rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
}

.review-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #333;
}

/* 加载状态 */
.loading,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading text {
  font-size: 24rpx;
  color: #999;
  text-transform: uppercase;
}

.empty-icon {
  font-size: 96rpx;
  font-weight: 900;
  color: #E0E0E0;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
  text-transform: uppercase;
}

.load-more {
  text-align: center;
  padding: 32rpx 0;
}

.loading-text,
.no-more-text {
  font-size: 24rpx;
  color: #999;
  text-transform: uppercase;
}
