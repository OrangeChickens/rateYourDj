/* pages/search/search.wxss - NTS 风格 */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}

/* 搜索框 */
.search-bar {
  background: #FFF;
  padding: 32rpx 48rpx;
  border-bottom: 3rpx solid #000;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  padding: 24rpx 32rpx;
  gap: 16rpx;
}

.search-icon {
  font-size: 20rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  color: #000;
}

.clear-icon {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  padding: 8rpx;
}

/* 内容区域 */
.content {
  flex: 1;
}

/* 搜索建议 */
.search-suggestions {
  padding: 48rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #000;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.section-header .clear-btn {
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 历史和热门搜索 */
.history-section,
.hot-section {
  margin-bottom: 80rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-list .tag {
  padding: 16rpx 32rpx;
  background-color: #FFF;
  color: #000;
  font-size: 22rpx;
  font-weight: 700;
  border-radius: 0;
  border: 2rpx solid #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-list .tag.hot {
  background-color: #000;
  border-color: #000;
  color: #FFF;
}

/* 搜索结果 */
.search-results {
  padding: 48rpx 32rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #000;
}

.results-header .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.results-header .count {
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* DJ卡片 */
.dj-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.dj-card {
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  padding: 48rpx;
  display: flex;
  gap: 32rpx;
}

.dj-photo {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.dj-photo .photo {
  width: 100%;
  height: 100%;
  border-radius: 0;
  background-color: #F0F0F0;
  border: 2rpx solid #000;
}

.dj-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dj-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.dj-city {
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 20rpx;
}

.rating-row .stars {
  display: flex;
  gap: 4rpx;
  font-size: 20rpx;
}

.rating-row .stars .star {
  color: #000;
}

.rating-row .stars .star.empty {
  color: #CCCCCC;
}

.rating-row .rating-value {
  font-weight: 700;
  color: #000;
  font-size: 32rpx;
  letter-spacing: -1rpx;
}

.rating-row .review-count {
  color: #000;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tags .tag {
  padding: 12rpx 24rpx;
  background-color: #FFF;
  color: #000;
  font-size: 20rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 64rpx 0;
}

.load-more .loading,
.load-more .no-more {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.load-more .more-btn {
  display: inline-block;
  padding: 28rpx 80rpx;
  background-color: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* 空状态 */
.empty-state {
  padding: 200rpx 0;
  text-align: center;
}

.empty-state .icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 48rpx;
  opacity: 0.2;
}

.empty-state .text {
  display: block;
  font-size: 26rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  color: #999;
}

.empty-state .submit-dj-btn {
  display: inline-block;
  margin-top: 48rpx;
  padding: 28rpx 80rpx;
  background-color: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  border: 2rpx solid #000;
  border-radius: 0;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}
