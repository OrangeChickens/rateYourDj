/* pages/search/search.wxss */

.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 搜索框 */
.search-bar {
  background: #FFF;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  gap: 16rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  padding: 8rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 20rpx;
}

/* 搜索建议 */
.search-suggestions {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header .title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
}

.section-header .clear-btn {
  font-size: 26rpx;
  color: #999;
}

/* 历史和热门搜索 */
.history-section,
.hot-section {
  margin-bottom: 60rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-list .tag {
  padding: 12rpx 28rpx;
  background-color: #FFF;
  color: #666;
  font-size: 26rpx;
  border-radius: 40rpx;
  border: 1rpx solid #E0E0E0;
}

.tag-list .tag.hot {
  background-color: #FFF9E6;
  border-color: #FFD700;
  color: #000;
}

/* 搜索结果 */
.search-results {
  padding: 20rpx;
}

.results-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.results-header .title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
}

.results-header .count {
  font-size: 26rpx;
  color: #999;
}

/* DJ卡片 */
.dj-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dj-card {
  background: #FFF;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  gap: 24rpx;
}

.dj-photo {
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.dj-photo .photo {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background-color: #F0F0F0;
}

.dj-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.dj-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  line-height: 1.3;
}

.dj-city {
  font-size: 24rpx;
  color: #666;
}

.rating-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
}

.rating-row .stars {
  display: flex;
  gap: 2rpx;
  font-size: 24rpx;
}

.rating-row .stars .star {
  color: #FFD700;
}

.rating-row .stars .star.empty {
  color: #DDD;
}

.rating-row .rating-value {
  font-weight: 700;
  color: #000;
  font-size: 28rpx;
}

.rating-row .review-count {
  color: #999;
}

.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.style-tags .tag {
  padding: 6rpx 16rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 20rpx;
  border-radius: 4rpx;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-more .loading,
.load-more .no-more {
  font-size: 26rpx;
  color: #999;
}

.load-more .more-btn {
  display: inline-block;
  padding: 16rpx 60rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-state {
  padding: 150rpx 0;
  text-align: center;
}

.empty-state .icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-state .text {
  display: block;
  font-size: 28rpx;
  color: #999;
}
