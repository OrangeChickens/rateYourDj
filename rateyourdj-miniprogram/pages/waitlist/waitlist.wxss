/* pages/waitlist/waitlist.wxss - NTS Style */

.waitlist-container {
  min-height: 100vh;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  padding: 80rpx 48rpx;
}

/* Logo & 标题 */
.waitlist-header {
  text-align: center;
  margin-bottom: 80rpx;
}

.app-name {
  display: block;
  font-size: 72rpx;
  font-weight: 900;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.beta-badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  background: #000;
  color: #FFF;
  font-size: 24rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
}

.tagline {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.tagline-sub {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 排队位置卡片 */
.position-card {
  background: #F5F5F5;
  border: 3rpx solid #000;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 60rpx;
}

.position-label {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 20rpx;
}

.position-number {
  display: block;
  font-size: 96rpx;
  font-weight: 900;
  color: #000;
  line-height: 1;
  margin-bottom: 20rpx;
}

.position-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: #E0E0E0;
  margin: 60rpx 0;
}

/* 访问权限区域 */
.access-section {
  margin-bottom: 60rpx;
}

.access-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 32rpx;
  border-bottom: 3rpx solid #000;
  padding-bottom: 16rpx;
}

/* 邀请码输入区域 */
.invite-input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.invite-input {
  flex: 1;
  height: 88rpx;
  background: #F5F5F5;
  border: 2rpx solid #000;
  padding: 0 24rpx;
  font-size: 28rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 160rpx;
  height: 88rpx;
  background: #000;
  color: #FFF;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  transition: opacity 0.2s;
}

.submit-btn:active {
  opacity: 0.8;
}
