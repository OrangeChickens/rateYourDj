/* pages/waitlist/waitlist.wxss - NTS 风格 */

.waitlist-container {
  min-height: 100vh;
  background: #FFF;
  padding: 120rpx 48rpx 80rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 96rpx;
  width: 100%;
}

.title {
  display: block;
  font-size: 72rpx;
  font-weight: 900;
  color: #000;
  margin-bottom: 48rpx;
  letter-spacing: 2rpx;
}

.tagline {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.tagline-sub {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  letter-spacing: 0.5rpx;
}

/* 邀请码区域 */
.invite-section {
  width: 100%;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-align: center;
  margin-bottom: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.section-desc {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.input-group {
  margin-bottom: 32rpx;
}

.invite-input {
  width: 100%;
  padding: 32rpx;
  background: #FFF;
  border: 3rpx solid #000;
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-align: center;
  letter-spacing: 2rpx;
  box-sizing: border-box;
  line-height: 1.5;
  height: auto;
}

.verify-btn {
  width: 100%;
  padding: 32rpx;
  background: #000;
  color: #FFF;
  border: 3rpx solid #000;
  font-size: 28rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  border-radius: 0;
}

.verify-btn::after {
  border: none;
}

.verify-btn[disabled] {
  background: #CCC;
  border-color: #CCC;
  color: #666;
}
