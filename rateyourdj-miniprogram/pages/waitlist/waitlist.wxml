<!-- pages/waitlist/waitlist.wxml -->
<view class="waitlist-container">
  <!-- 头部标语 -->
  <view class="header">
    <text class="title">烂u盘</text>
    <text class="tagline">一个DJ评分社区</text>
    <text class="tagline-sub">好DJ值得被看见，烂DJ也是</text>
  </view>

  <!-- 邀请码输入区域 -->
  <view class="invite-section">
    <text class="section-title">输入邀请码</text>
    <text class="section-desc">本小程序处于内测阶段，需要邀请码才能使用</text>

    <view class="input-group">
      <input
        class="invite-input"
        type="text"
        placeholder="请输入邀请码"
        value="{{inviteCode}}"
        bindinput="onInviteCodeInput"
        maxlength="20"
      />
    </view>

    <button class="verify-btn" bindtap="handleVerifyCode" disabled="{{!inviteCode}}">
      验证并进入
    </button>
  </view>
</view>
