              <view class="rating-stars">
                <text class="star star-filled" wx:for="{{item.fullStars}}" wx:key="index">â˜…</text>
                <text class="star star-empty" wx:for="{{item.emptyStars}}" wx:key="index">â˜…</text>
              </view>
            </view>
