/* 首页样式 */
.container {
  padding-bottom: 32rpx;
}

/* 搜索区域 */
.search-section {
  padding: 32rpx;
  background-color: #FFFFFF;
}

.search-bar {
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999999;
}

/* 城市选择 */
.city-section {
  background-color: #FFFFFF;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #E0E0E0;
  margin-bottom: 24rpx;
}

.city-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.city-name {
  flex: 1;
  font-size: 28rpx;
  color: #1A1A1A;
}

.city-arrow {
  font-size: 24rpx;
  color: #999999;
}

/* 区块 */
.section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1A1A1A;
}

/* DJ卡片列表 */
.dj-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.dj-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dj-card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.dj-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: #F5F5F5;
  margin-right: 24rpx;
}

.dj-info {
  flex: 1;
}

.dj-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1A1A1A;
  display: block;
  margin-bottom: 8rpx;
}

.dj-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #999999;
}

.dj-city {
  color: #666666;
}

.dj-label {
  color: #999999;
}

/* 评分区域 */
.rating-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.overall-rating {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.rating-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD700;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 24rpx;
  margin-right: 2rpx;
}

.star-filled {
  color: #FFD700;
}

.star-empty {
  color: #E0E0E0;
}

.review-count {
  font-size: 24rpx;
  color: #999999;
}

/* 标签 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666666;
}
