/* pages/dj-upload/dj-upload.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.image-upload {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.upload-icon {
  font-size: 80rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #ccc;
}

/* Picker 样式 */
.picker {
  width: 100%;
  height: 80rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #333;
}

.picker:empty::before {
  content: '请选择';
  color: #999;
}

/* 标签选择器样式 */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

/* 选中状态 - 黑底白字 */
.tag-selector .tag-item.selected {
  background: #333 !important;
  background-color: #333 !important;
  border-color: #333 !important;
  border: 2rpx solid #333 !important;
  color: white !important;
  font-weight: bold !important;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 搜索框样式 */
.search-box {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  height: 70rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
}

/* 分类样式 */
.style-categories {
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 10rpx;
  max-height: 800rpx;
  overflow-y: auto;
}

.category-group {
  margin-bottom: 10rpx;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: white;
  border-radius: 8rpx;
  cursor: pointer;
  margin-bottom: 10rpx;
}

.category-icon {
  font-size: 24rpx;
  color: #666;
  margin-right: 12rpx;
  width: 20rpx;
}

.category-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.category-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 10rpx 20rpx 20rpx 20rpx;
  background: white;
  border-radius: 8rpx;
}

/* 分类中的标签样式 */
.category-tags .tag-item {
  padding: 12rpx 24rpx;
  background: #f7f7f7;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.category-tags .tag-item.selected {
  background: #333 !important;
  border-color: #333 !important;
  color: white !important;
  font-weight: bold !important;
}
