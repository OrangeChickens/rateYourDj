/* pages/dj-upload/dj-upload.wxss - NTS style */

.container {
  min-height: 100vh;
  background-color: #FFFFFF;
}

.form-section {
  padding: 48rpx 32rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 48rpx;
  padding-bottom: 32rpx;
  border-bottom: 3rpx solid #000;
}

.form-item {
  margin-bottom: 48rpx;
}

.label {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  padding: 0 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  box-sizing: border-box;
}

/* Image upload */
.image-upload {
  width: 100%;
  height: 400rpx;
  border: 2rpx solid #000;
  border-radius: 0;
  overflow: hidden;
  background: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.upload-icon {
  font-size: 48rpx;
  color: #000;
}

.upload-text {
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* Slide-up transition */
.container.sliding-up {
  transform: translateY(-100vh);
  transition: transform 0.5s cubic-bezier(0.4, 0.0, 0.2, 1);
}

/* Swipe submit area */
.swipe-submit-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: #FFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top: 48rpx;
  z-index: 100;
  transition: background-color 0.3s;
}

.swipe-submit-area.active {
  background: #F5F5F5;
}

.swipe-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  transition: transform 0.2s;
}

.swipe-icon {
  font-size: 80rpx;
  font-weight: 700;
  color: #000;
  line-height: 1;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.swipe-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.swipe-progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: #E0E0E0;
}

.swipe-progress-fill {
  height: 100%;
  background: #000;
  transition: width 0.1s linear;
}

/* Submit animation overlay */
.submit-animation-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  z-index: 9999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.submit-animation-overlay.show {
  opacity: 1;
  pointer-events: all;
}

.animation-content {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.animation-content.slide-up {
  animation: slideUpPage 0.5s cubic-bezier(0.4, 0.0, 0.2, 1) forwards;
}

@keyframes slideUpPage {
  from { transform: translateY(0); }
  to { transform: translateY(-100%); }
}

.animation-content.success {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Confetti */
.confetti-container {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.confetti {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: -40rpx;
  opacity: 0;
}

.confetti:nth-child(2n) { border-radius: 50%; }
.confetti:nth-child(3n) { width: 12rpx; height: 24rpx; }
.confetti:nth-child(5n) { width: 24rpx; height: 12rpx; }

.confetti:nth-child(odd) { animation: confettiFallLeft 3s ease-out forwards; }
.confetti:nth-child(even) { animation: confettiFallRight 3s ease-out forwards; }
.confetti:nth-child(3n) { animation: confettiFallStraight 3s ease-out forwards; }

@keyframes confettiFallLeft {
  0% { top: -40rpx; opacity: 1; transform: translateX(0) rotateZ(0deg) scale(1); }
  100% { top: 100vh; opacity: 0; transform: translateX(-200rpx) rotateZ(720deg) scale(0.5); }
}

@keyframes confettiFallRight {
  0% { top: -40rpx; opacity: 1; transform: translateX(0) rotateZ(0deg) scale(1); }
  100% { top: 100vh; opacity: 0; transform: translateX(200rpx) rotateZ(-720deg) scale(0.5); }
}

@keyframes confettiFallStraight {
  0% { top: -40rpx; opacity: 1; transform: translateX(0) rotateZ(0deg) scale(1); }
  100% { top: 100vh; opacity: 0; transform: translateX(0) rotateZ(360deg) scale(0.8); }
}

/* Success content */
.success-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 48rpx;
  animation: successPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes successPop {
  0% { transform: scale(0); opacity: 0; }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); opacity: 1; }
}

.success-icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #000;
  color: #FFF;
  font-size: 120rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.success-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* Picker */
.picker {
  width: 100%;
  height: 80rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  padding: 0 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #000;
}

/* Tag selector */
.tag-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 32rpx;
  border: 2rpx solid #000;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  font-size: 22rpx;
  font-weight: 600;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.tag-selector .tag-item.selected {
  background: #000 !important;
  border-color: #000 !important;
  color: #FFF !important;
  font-weight: 700 !important;
}

.hint-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #666;
  margin-top: 16rpx;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* Search box */
.search-box {
  margin-bottom: 24rpx;
}

.search-input {
  display: block;
  width: 100%;
  height: 70rpx;
  background: #FFF;
  border-radius: 0;
  padding: 0 20rpx;
  font-size: 24rpx;
  box-sizing: border-box;
  border: 2rpx solid #000;
  font-weight: 500;
  color: #000;
  margin: 0;
}

/* Style categories */
.style-categories {
  max-height: 800rpx;
  overflow-y: auto;
}

.category-group,
.genre-group {
  margin-bottom: 16rpx;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #F5F5F5;
  border: 2rpx solid #000;
  border-radius: 0;
  cursor: pointer;
  margin-bottom: 8rpx;
  box-sizing: border-box;
}

.category-icon {
  font-size: 22rpx;
  color: #000;
  margin-right: 12rpx;
  width: 20rpx;
  font-weight: 700;
}

.category-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #000;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* Subgroups container (level 2) */
.subgroups-container {
  border: 2rpx solid #000;
  border-top: none;
  background: #FFF;
  padding: 16rpx 20rpx 20rpx 20rpx;
}

.subgroup {
  margin-bottom: 16rpx;
}

.subgroup:last-child {
  margin-bottom: 0;
}

.subgroup-title {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
  margin-bottom: 12rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #E0E0E0;
}

.subgroup-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.subgroup-tags .tag-item {
  padding: 12rpx 24rpx;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 0;
  font-size: 22rpx;
  color: #000;
  transition: all 0.2s;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.subgroup-tags .tag-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.subgroup-tags .tag-item.selected {
  background: #000 !important;
  border-color: #000 !important;
  color: #FFF !important;
  font-weight: 700 !important;
}
